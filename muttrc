### hooks
# lj
folder-hook .		'set sort = "threads"; \
			set signature = "~/.signature"; \
			set attribution = "  %n wrote:\n"; \
			set include = yes; \
			set crypt_autosign = yes; \
			set fast_reply = no'
folder-hook lj_notify	'set sort = date-received; \
			set signature ="~/.signature.lj"; \
			set attribution = ""; \
			set include = no; \
			set crypt_autosign = no; \
			set fast_reply = yes;'
