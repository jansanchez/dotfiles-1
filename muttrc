set realname = "Roman Bogorodskiy"
set imap_user = 'bogorodskiy@gmail.com'
set spoolfile = imaps://imap.gmail.com:993/INBOX
set smtp_url = "smtp://bogorodskiy@smtp.gmail.com:587/"
set folder = "imaps://imap.gmail.com:993"
#set record=+sent-mail-`date +%Y`
set record="+[Gmail]/Sent Mail"
set postponed="+[Gmail]/Drafts"
# previously do: mkdir -p ~/.mutt/cache/{headers,bodies}
set header_cache="~/.mutt/cache/headers"
set message_cachedir="~/.mutt/cache/bodies"
set certificate_file=~/.mutt/certificates
set move = no
set delete = yes
set edit_hdrs
set include
set reply_to
set abort_nosubject = no
set sig_dashes = no
set attribution = "  %n wrote:\n"
alternates '(username|altusername)([-+].*)?@.*'
set hdr_format="%4C %Z %{%m/%d} %-15.15F (%4c) %s" # format of the index
auto_view text/html

hdr_order From: Date: User-Agent: X-Mailer To: Cc: Reply-To: Subject:
ignore *
unignore From: Date: User-Agent: X-Mailer To: Cc: Reply-To: Subject:
my_hdr Reply-To:

set query_command = "/home/novel/opt/goobook-read-only/contactos.py ‘%s’”

set sort=threads
set sort_aux=last-date-received

# default settings
folder-hook . 'set from = "bogorodskiy@gmail.com"; \
	set smtp_url = "smtp://bogorodskiy@smtp.gmail.com:587/"; \
	set header_cache = "~/.mutt/cache/headers"; \
	set message_cachedir = "~/.mutt/cache/bodies";'

folder-hook griddynamics 'set from = "rbogorodskiy@griddynamics.com"; \
			set smtp_url = "smtp://rbogorodskiy@griddynamics.com@smtp.gmail.com:587/"; \
			set header_cache = "~/.mutt/wrkcache/headers"; \
			set message_cachedir = "~/.mutt/wrkcache/bodies";'

source ~/.mutt/themes/mirrorbox
