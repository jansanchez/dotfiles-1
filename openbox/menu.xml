<?xml version="1.0" encoding="UTF-8"?>

<openbox_menu xmlns="http://openbox.org/"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://openbox.org/
                file:///usr/X11R6/share/openbox/openbox/menu.xsd">
<menu id="apps-menu" label="Applications">
  <item label="Xterm">
    <action name="Execute"><execute>xterm</execute></action>
  </item>
  <item label="irssi">
    <action name="Execute"><execute>aterm -e irssi</execute></action>
  </item>	  
  <item label="Gaim">
    <action name="Execute"><execute>pidgin</execute></action>
  </item>
  <item label="LinuxDC++">
    <action name="Execute"><execute>linuxdcpp</execute></action>
  </item>
  <item label="kile">
    <action name="Execute"><execute>kile</execute></action>
  </item>
</menu>

<menu id="root-menu" label="Openbox 3">
  <item label="browse files">
    <action name="Execute"><execute>rox</execute></action>
  </item>
  <menu id="apps-menu" />
  <menu id="games-menu" />
  <separator />
  <menu id="client-list-menu" />
  <separator />
  <item label="ObConf">
    <action name="Execute"><execute>obconf</execute></action>
  </item>
  <item label="Reconfigure">
    <action name="Reconfigure" />
  </item>
  <separator />
  <item label="Exit">
    <action name="Exit" />
  </item>
</menu>

</openbox_menu>
