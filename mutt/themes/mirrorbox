# vim:ft=muttrc
#
# Roman Bogorodskiy (novel@FreeBSD.org)
# Based on the "cyan" theme found somewhere on the net

color normal		white		default
color attachment	cyan		default
color bold		brightwhite	default
color underline		default		cyan
color error		brightwhite	default
color indicator		black		white
color message		brightwhite	default
color status		brightwhite	default

color quoted		cyan		default
color quoted1		brightcyan	default
color quoted2		cyan		default
color quoted3		brightcyan	default
color quoted4		cyan		default
color quoted5		brightcyan	default

color signature		default		default
color tilde		brightcyan	default
color tree		cyan		default
color markers		brightblack	default

color body		brightwhite	default  "[^ <]*:\/\/[^ >]*" # for URLs
color body		brightwhite	default  "[A-Za-z0-9_\.\-]+@[A-Za-z0-9_\.\-]*[A-Za-z0-9_\.\-]+" # For email adresses
#color body		brightwhite	default  "[a-zA-Z0-9]+\([0-9]1\)"

color hdrdefault  brightwhite         default
color header      brightwhite   default  "^from: *"
color header      brightwhite   default  "^subject: *"
color header      brightcyan   default  "^x-mailing-list: *"

color index       brightcyan   default "~N"   # New
color index       cyan         default "~O"   # Unread
color index       brightwhite  default "~F"   # Flagged
color index       brightwhite  default "~T"   # Tagged
color index       brightwhite  default "~f MAILER-DAEMON@*"
color index       brightwhite  default "~f Mailer-Daemon@*"
color index       brightblack  default "~D"   # Deleted
